<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table class="table-bordered" style="width: 100%">
  <thead>
    <tr>
      <th>Room Number</th>
      <th>From</th>
      <th>To</th>
      <th>Total Bill</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.room.room_number %></td>
      <td><%= booking.from%></td>
      <td><%= booking.to %></td>
      <td><%= booking.bill %></td>
    </tr>
    <% end %>
  </tbody>
</table>
