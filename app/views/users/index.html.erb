

<h1>Users</h1>

<table class="table-bordered" style="width: 100%">
  <thead>
    <tr>
      <th>User_id</th>
      <th>Email</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <% if !user.is_admin? %> 
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <% if current_user.is_admin? %> 
      <td><%= link_to 'Destroy', "/users/#{user.id}/destroy_user", method:'post', data: { confirm: 'Are you sure?' },class:'btn btn-danger' %></td>
      <% end %>
      <% end %>
    </tr>
    <% end %>

  </tbody>
</table>

